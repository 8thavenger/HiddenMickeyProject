@model HiddenMickeyProject.Models.AreaViewModel
@{
    ViewBag.Title = "Delete Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Area</legend>
    <div class="col-xs-12 col-sm-6">
        <table>
            <tbody>
                <tr>
                    <td>
                        Region Name
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.RegionName)
                    </td>
                </tr>
                <tr>
                    <td>
                        Area Name
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.AreaName)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-xs-12 col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.RegionId)
            @Html.HiddenFor(model => model.AreaId)
            <input type="submit" value="Delete" /> <text>|</text>
            @Html.RouteLink("Back To List", "region_default", new { RegionName = Model.RegionName, Action = "Details" })
        }
    </div>
</fieldset>