@model HiddenMickeyProject.Models.AreaViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Edit</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.RegionId)
    @Html.HiddenFor(model => model.RegionName)
    @Html.HiddenFor(model => model.AreaId)
    <fieldset>
        <legend>Edit Area</legend>
        <div class="col-xs-12 col-sm-6">
            <table cellpadding="0" cellspacing="0" style="width: 100%;">
                <tbody>
                    <tr>
                        <td>
                            Region Name
                        </td>
                        <td>
                            @Model.RegionName;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Area Name
                        </td>
                        <td>
                            @Html.EditorFor(model => model.AreaName)
                            @Html.ValidationMessageFor(model => model.AreaName)
                        </td>
                    </tr>
                <tbody>
            </table>
        </div>
        <div class="col-xs-12 col-sm-6">
            <ul>
                <li>
                    @Html.RouteLink("Create Location", "location_default", new { RegionName = Model.RegionName, AreaName= Model.AreaName ,Action = "Create" })
                </li>
                <li>
                    @Html.RouteLink("Back To List", "region_default", new { RegionName = Model.RegionName, Action = "Details" })
                </li>
                <li>
                    <input type="submit" value="Update Area" />
                </li>
            </ul>
        </div>
    </fieldset>
    <div>
        @Html.Partial("Locations", Model.Locations)
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}