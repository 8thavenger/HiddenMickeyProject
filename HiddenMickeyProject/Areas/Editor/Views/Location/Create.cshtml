@model HiddenMickeyProject.Models.LocationViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create Location</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.AreaId)
    @Html.HiddenFor(model => model.AreaName)
    @Html.HiddenFor(model => model.RegionName)
    <fieldset>
        <legend>Create Location</legend>
        <div class="col-xs-12 col-sm-6">
            <table cellpadding="0" cellspacing="0" style="width: 100%;">
                <tbody>
                    <tr>
                        <td>
                            Region Name
                        </td>
                        <td>
                            @Html.LabelFor(model => model.RegionName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Area Name
                        </td>
                        <td>
                            @Html.LabelFor(model => model.AreaName)
                        </td>
                    </tr>
                    <tr>
                    <tr>
                        <td>
                            Location Name
                        </td>
                        <td>
                            @Html.EditorFor(model => model.LocationName)
                            @Html.ValidationMessageFor(model => model.LocationName)
                        </td>
                    </tr>
                    <tbody>
            </table>
        </div>
        <div class="col-xs-12 col-sm-6">
            <ul>
                <li>
                    @Html.RouteLink("Back To List", "area_default", new { RegionName = Model.RegionName, AreaName = Model.AreaName, Action = "Details" })
                </li>
                <li>
                    <input type="submit" value="Create New Location" />
                </li>
            </ul>
        </div>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}