@model HiddenMickeyProject.Models.Navigator
    <fieldset>
        <legend>Location</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.AreaId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AreaId)
            @Html.ValidationMessageFor(model => model.AreaId)
        </div>
        
        @Html.HiddenFor(model => model.RegionName)
        @Html.HiddenFor(model => model.AreaName)
        @Html.HiddenFor(model => model.LocationId)

        <div class="editor-label">
            Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LocationName)
            @Html.ValidationMessageFor(model => model.LocationName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
