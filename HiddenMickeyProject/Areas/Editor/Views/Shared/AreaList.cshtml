@using HiddenMickeyProject.Data
@model HiddenMickeyProject.Models.Navigator
    <table cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>Area Name</th>
                <th></th>
            </tr>
        </thead>
        @foreach (Area item in Model.Areas)
        {
            <tr>
                <td>@item.AreaName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { Area = "Editor", AreaName = item.AreaName, RegionName = Model.RegionName }, null) | 
                    @Html.ActionLink("Details", "Details", new { Area = "Editor", AreaName = item.AreaName, RegionName = Model.RegionName }, null)
                </td>
            </tr>
        }
    </table>
